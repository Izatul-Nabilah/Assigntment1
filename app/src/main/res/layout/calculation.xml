<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible">

    <TextView
        android:id="@+id/Calc"
        android:layout_width="231dp"
        android:layout_height="51dp"
        android:background="#CAC8C4"
        android:bufferType="normal"
        android:fontFamily="sans-serif-black"
        android:text="     LET'S CALCULATE TOGETHER"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="243dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:background="#CA2437"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:inputType="textPersonName"
        android:text="TYPE OF GOLD"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textAlignment="center">

        <CheckBox
            android:id="@+id/cwear"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:text="Wear(200g)"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="215dp"
            tools:layout_editor_absoluteY="322dp" />

        <CheckBox
            android:id="@+id/ckeep"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:background="#FFFFFF"
            android:text="Keep (85g)"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="79dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/etgoldvalue"
        android:layout_width="243dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="0dp"
        android:background="#CA2437"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="CURRENT GOLD VALUE /g"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etweight"
        android:layout_width="245dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="#CA2437"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="WEIGHT /g"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#8BC34A"
        android:backgroundTint="#050505"
        android:fontFamily="sans-serif-black"
        android:text="SUBMIT"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:ignore="MissingConstraints,TextContrastCheck,TextContrastCheck,TextContrastCheck" />


</LinearLayout>